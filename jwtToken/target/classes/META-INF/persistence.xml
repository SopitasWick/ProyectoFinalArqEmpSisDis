<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="conexion" transaction-type="JTA">
    <class>com.itson.edu.mx.entidades.CitaPaciente</class>
    <class>com.itson.edu.mx.entidades.Medico</class>
    <class>com.itson.edu.mx.entidades.Paciente</class>
    <class>com.itson.edu.mx.entidades.PacienteTutor</class>
    <class>com.itson.edu.mx.entidades.Tutor</class>
    <class>com.itson.edu.mx.entidades.UsuarioPaciente</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
  </persistence-unit>
  <persistence-unit name="conexionUnit" transaction-type="JTA">
    <jta-data-source>conexion</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
